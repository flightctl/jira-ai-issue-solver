# Version is passed as build arg from Makefile (sourced from .github/versions.sh)
ARG GOLANGCI_LINT_VERSION=v1.62.2

FROM docker.io/golangci/golangci-lint:${GOLANGCI_LINT_VERSION}

# Run as root (needed for volume mounts with SELinux)
USER root

# Copy go.mod and go.sum to download dependencies
COPY go.mod go.sum ./
RUN go mod download
