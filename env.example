# Example environment variables for jira-ai-issue-solver
# Copy this file to .env and update with your values

# Server Configuration
JIRA_AI_SERVER_PORT=8080

# Logging Configuration
JIRA_AI_LOGGING_LEVEL=info
JIRA_AI_LOGGING_FORMAT=console

# Jira Configuration
JIRA_AI_JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_AI_JIRA_USERNAME=your-username
JIRA_AI_JIRA_API_TOKEN=your-jira-api-token
JIRA_AI_JIRA_INTERVAL_SECONDS=300
JIRA_AI_JIRA_DISABLE_ERROR_COMMENTS=false
JIRA_AI_JIRA_GIT_PULL_REQUEST_FIELD_NAME=Git Pull Request
# Project keys to filter by (comma-separated list, required)
JIRA_AI_JIRA_PROJECT_KEYS=PROJ1,PROJ2,PROJ3

# Jira Status Transitions
JIRA_AI_JIRA_STATUS_TRANSITIONS_TODO=To Do
JIRA_AI_JIRA_STATUS_TRANSITIONS_IN_PROGRESS=In Progress
JIRA_AI_JIRA_STATUS_TRANSITIONS_IN_REVIEW=In Review

# GitHub Configuration
JIRA_AI_GITHUB_PERSONAL_ACCESS_TOKEN=your-github-personal-access-token
JIRA_AI_GITHUB_BOT_USERNAME=your-org-ai-bot
JIRA_AI_GITHUB_BOT_EMAIL=ai-bot@your-org.com
JIRA_AI_GITHUB_TARGET_BRANCH=main
JIRA_AI_GITHUB_PR_LABEL=ai-pr
JIRA_AI_GITHUB_SSH_KEY_PATH=/path/to/ssh_signing_key

# AI Provider Selection
JIRA_AI_AI_PROVIDER=claude

# Claude CLI Configuration
JIRA_AI_CLAUDE_CLI_PATH=claude
JIRA_AI_CLAUDE_TIMEOUT=300
JIRA_AI_CLAUDE_DANGEROUSLY_SKIP_PERMISSIONS=true
JIRA_AI_CLAUDE_ALLOWED_TOOLS=Bash Edit
JIRA_AI_CLAUDE_DISALLOWED_TOOLS=Python

# Gemini CLI Configuration
JIRA_AI_GEMINI_CLI_PATH=gemini
JIRA_AI_GEMINI_TIMEOUT=300
JIRA_AI_GEMINI_MODEL=gemini-2.5-pro
JIRA_AI_GEMINI_ALL_FILES=false
JIRA_AI_GEMINI_SANDBOX=false
JIRA_AI_GEMINI_API_KEY=your-gemini-api-key

# Component to Repository Mapping (comma-separated key=value pairs)
JIRA_AI_COMPONENT_TO_REPO=frontend=https://github.com/your-org/frontend.git,backend=https://github.com/your-org/backend.git,api=https://github.com/your-org/api.git

# Temporary Directory
JIRA_AI_TEMP_DIR=/tmp/jira-ai-issue-solver 